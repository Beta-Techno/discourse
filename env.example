# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_APP_ID=your_discord_application_id_here
GUILD_ID=your_test_guild_id_here
REGISTER_COMMANDS=true

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_PATH=./data/discourse.db

# Service URLs
API_BASE_URL=http://agent-service:8080
MCP_SERVERS_CONFIG=./mcp.servers.json
MCP_ALLOWED_TOOLS=*

# PostgreSQL Configuration (for MCP server)
POSTGRES_URI=postgresql://mcp_ro:your_password@your-cloud-host:5432/your_database

# Logging
LOG_LEVEL=info
NODE_ENV=development

# Reply behavior
REPLY_MODE=inline           # inline | thread | auto
AUTO_THREAD_THRESHOLD=1500  # used when REPLY_MODE=auto
MENTION_TRIGGER_ENABLED=true
