# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_APP_ID=your_discord_application_id_here
GUILD_ID=your_test_guild_id_here
REGISTER_COMMANDS=true

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Tool Configuration
ALLOWED_TOOLS=http.get
ALLOWED_HOSTS=example.com,docs.yourcompany.tld
MAX_HTTP_BYTES=100000

# Database Configuration
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=assistant
MYSQL_PASSWORD=assistant_password_here
MYSQL_DB=assistant

# Service URLs
API_BASE_URL=http://agent-service:8080
MCP_HTTP_URL=http://mcp-http:3000

# Logging
LOG_LEVEL=info
NODE_ENV=development

# Reply behavior
REPLY_MODE=inline           # inline | thread | auto
AUTO_THREAD_THRESHOLD=1500  # used when REPLY_MODE=auto
MENTION_TRIGGER_ENABLED=true
